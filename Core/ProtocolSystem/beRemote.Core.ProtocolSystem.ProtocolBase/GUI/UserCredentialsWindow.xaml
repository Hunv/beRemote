<Window x:Class="beRemote.Core.ProtocolSystem.ProtocolBase.GUI.UserCredentialsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UserCredentials" Height="150" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition Height="28"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" Margin="2">Username</Label>
        <TextBox Grid.Row="1" Grid.Column="2" Margin="2" x:Name="txtUsername" KeyDown="txtUsername_KeyDown"></TextBox>
        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Margin="2">Password</Label>
        <PasswordBox Grid.Row="2" Grid.Column="2" Margin="2" x:Name="txtPassword" KeyDown="txtPassword_KeyDown"></PasswordBox>
        <Button Grid.Row="3" Grid.Column="2" Margin="2" x:Name="cmdContinue" Click="cmdContinue_Click">Continue</Button>
    </Grid>
</Window>
